@page "{handler?}"
@using Importør.Models
@model Importør.Pages.Car.GetAllCarsModel
@{
}
<br />
<h1>All Cars</h1>
<br />
<div class="row">
    <div class="col-4"><h5>Search Name</h5></div>
    <div class="col-4"><h5>Filter Price</h5></div>
    <div class="col-4"></div>
</div>
<div>
    <a asp-page="/Car/CarLocations">Availability</a>
</div>
<div class="row">
    <div class="col-4">
        <form method="post" class="form-inline">
            <input asp-for="@Model.SearchString" class="form-control mr-1" placeholder="Enter search term" />
            <input type="submit" asp-page-handler="CarSearch" value="Search" class="btn btn-primary" />
        </form>
    </div>

    <div class="col-4">
        <form method="post" class="form-inline">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Min</span>
                </div>
                <input asp-for="@Model.MinPrice" class="form-control mr-1" />

                <div class="input-group-prepend">
                    <span class="input-group-text">Max</span>
                </div>
                <input asp-for="@Model.MaxPrice" class="form-control mr-1" />
                <input type="submit" asp-page-handler="PriceFilter" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-2"></div>
</div>
<br />
<table class="table table-bordered table-hover table-striped" width="60%">
    <col style="width: 5%">
    <col style="width: 77%">
    <col style="width: 9%">
    <col style="width: 9%">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                Fuel Type
            </th>
            <th>
                Year
            </th>
            <th>
                Location
            </th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Cars != null)
        {
            foreach (var car in Model.Cars)
            {
        <tr>
            <td>
                @car.Model
            </td>
            <td>
                @car.Type
            </td>
            <td>
                @car.Price
            </td>
            <td>
                @car.FuelType
            </td>
            <td>
                @car.Year
            </td>
            <td>
                @car.Location
            </td>
            <td>
                <!-- Call to action buttons -->
                <ul class="list-inline m-0">
                    <li class="list-inline-item">
                        <a class="btn btn-primary btn-sm" type="button" data-toggle="tooltip" title="Edit" asp-page="EditItem" asp-route-id="@car.CarId"><i class="fa fa-edit"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a class="btn btn-danger btn-sm " type="button" data-toggle="tooltip" data-placement="top" title="Delete" asp-page="DeleteItem" asp-route-id="@car.CarId"><i class="fa fa-trash"></i></a>
                    </li>
                </ul>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<br />
<p>
    <a class="btn btn-primary" data-toggle="tooltip" title="Add new Car" asp-page="CreateCar"><i class="fa fa-plus-square mr-1"></i> Create a new Car </a>
</p>
<br />
